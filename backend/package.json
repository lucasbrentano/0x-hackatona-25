{
    "name": "hackathon-backend",
    "version": "1.0.0",
    "main": "src/index.ts",
    "description": "Backend para Hackathon 2025 - Node.js + TypeScript + MongoDB",
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.0",
        "express-validator": "^7.2.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.15.1",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/compression": "^1.8.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "latest",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.33.0",
        "@typescript-eslint/parser": "^8.33.0",
        "eslint": "^9.28.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.1.4",
        "nodemon": "latest",
        "prettier": "latest",
        "prettify": "latest",
        "rimraf": "^6.0.1",
        "supertest": "^7.1.1",
        "ts-jest": "^29.3.4",
        "ts-node": "latest",
        "tsconfig-paths": "^4.2.0",
        "typescript": "latest"
    },
    "scripts": {
        "prettier": "prettier --write \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.css\"",
        "prettify": "pretty-quick --staged",
        "dev": "nodemon src/index.ts",
        "start": "ts-node src/index.ts",
        "build": "tsc",
        "prod": "node dist/index.js",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:dev": "docker-compose up --build",
        "docker:down": "docker-compose down",
        "docker:clean": "docker-compose down -v",
        "docker:logs": "docker-compose logs -f app",
        "test": "jest --detectOpenHandles --forceExit",
        "test:watch": "jest --watch --detectOpenHandles",
        "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
        "test:ci": "jest --coverage --watchAll=false --detectOpenHandles --forceExit"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": ["<rootDir>/src", "<rootDir>/tests"],
        "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/index.ts",
            "!src/**/*.d.ts",
            "!src/types/**/*.ts"
        ],
        "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
        "testTimeout": 30000
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn prettify"
        }
    },
    "keywords": [
        "node",
        "ts",
        "typescript",
        "express",
        "api",
        "hackathon"
    ],
    "author": {
        "name": "Lucas Brentano"
    }
}
